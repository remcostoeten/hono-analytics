# Application Environment
NODE_ENV=development
PORT=8000

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/analytics

# For SQLite (development/testing)
# DATABASE_URL=sqlite:./analytics.db
# DATABASE_PROVIDER=sqlite

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-docs-site.com

# API Keys
DEFAULT_API_KEY=dev-key-12345

# Logging & Monitoring
LOG_LEVEL=info

# Fly.io Production Variables (set via flyctl secrets)
# FLY_APP_NAME=onolythics-api
# DATABASE_URL=postgres://... (Fly PostgreSQL)

# Optional: Authentication (if implementing)
# JWT_SECRET=your-secret-key
# AUTH_ENABLED=false
